---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import "../styles/global.css";

const heroImages = [
  { src: "/images/mona_lisa2.webp", alt: "Mona Lisa with Cards 1" },
  { src: "/images/mona_lisa3.webp", alt: "Mona Lisa with Cards 2" },
  { src: "/images/mona_lisa1.webp", alt: "Mona Lisa with Cards 3" },
];
---

<MainLayout title="Dealers Grip">
  <!-- <ProductPage /> -->
  <Hero
    images={heroImages}
    title="dealersgripÂ©"
    subtitle={[
      "Crafted for the bold, designed for ",
      "the refined cards reimagined",
    ]}
  />
  <section class="latest-section">
    <div class="line"></div>
    <h2>LATEST DECKS</h2>
    <div class="line"></div>
    <!-- Line between header and categories -->

    <div class="latest-grid">
      <Card
        title="OLIVER"
        imageSrc="/images/oliver.webp"
        href="/decks/oliver"
        alt="Oliver"
        price="25$"
      />
      <Card
        title="SMOKE & MIRROR RED EDITION"
        imageSrc="/images/smred.webp"
        href="/decks/smred"
        alt="SMOKE & MIRROR RED EDITION"
        price="18$"
      />
      <Card
        title="SMOKE & MIRROR BLUE EDITION"
        imageSrc="/images/smblue.webp"
        href="/decks/smblue"
        alt="SMOKE & MIRROR BLUE EDITION"
        price="18$"
      />
      <Card
        title="SMOKE & MIRROR GARDEN EDITION"
        imageSrc="/images/smgarden.webp"
        href="/decks/smgarden"
        alt="SMOKE & MIRROR Garden EDITION"
        price="18$"
      />
    </div>
  </section>
  <div class="line" style="margin: 0 auto;"></div>

  <!-- New Section -->
  <section class="nostalgia-section">
    <div class="line" style="margin: 0 auto;"></div>
    <div class="nostalgia-grid">
      <!-- Left Column -->
      <div class="nostalgia-item">
        <h2>Feeling nostalgic?</h2>
        <p>
          Dive into our extensive archive of past decks and relive some of the
          most iconic card designs we've ever produced. Whether you're
          revisiting an old favorite or discovering something new, there's
          always something nostalgic waiting for you.
        </p>
        <a href="/" class="nostalgia-button">Explore the Archive</a>
      </div>

      <!-- Right Column -->
      <div class="nostalgia-item">
        <h2>Your path begins today</h2>
        <p>
          Our primary aim is to strengthen cardistry culture, challenge industry
          norms, and re-explore playing cards as a self-standing object of
          artistic expression in the modern world.
        </p>
        <a href="/" class="nostalgia-button">Learn more here</a>
      </div>
    </div>
    <div class="line" style="margin: 0 auto;"></div>
  </section>
</MainLayout>
