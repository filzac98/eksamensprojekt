---
import MainLayout from "../../layouts/MainLayout.astro";
import Button from "../../components/Button.astro";

export async function getStaticPaths() {
  const data = await fetch(
    "https://jjjjscawvefnxkupahzs.supabase.co/rest/v1/data?select=*",
    {
      method: "GET",
      headers: {
        apikey:
          "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImpqampzY2F3dmVmbnhrdXBhaHpzIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MzI1MzYwNzgsImV4cCI6MjA0ODExMjA3OH0.mTLqZh0sSiFXO8M_cW7oiyPzL1R_xdMpfMoxMtGCVCk",
      },
    }
  ).then((response) => response.json());

  return data.map((card) => {
    return {
      params: { card: card.slug },
      props: { card },
    };
  });
}

const { card } = Astro.props;
---

<MainLayout title={card.name}>
  <section class="single-grid">
    <!-- Left side: Full Image -->
    <div class="single-image-wrapper">
      <img src={`/images/${card.img}`} alt={card.name} class="single-image" />
      <a href="/kiosk#decks" class="go-back-btn"><</a>
    </div>

    <!-- Right side: Information & Buttons -->
    <div class="single-info">
      <h2>{card.name}</h2>
      <p>{card.price}$</p>
      <p class="prod-title">{card.prod_title}</p>
      <p>{card.desc}</p>
      <div class="button-section">
        <!-- Quantity Selector -->
        <input
          type="number"
          min="1"
          value="1"
          class="quantity-input"
          aria-label="Quantity"
        />
        <!-- Add to Cart Button -->
        <Button variant="primary" size="medium" buttonlink="/cart">
          Add To Cart
        </Button>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Button style for "Go Back to Artists" */
  .go-back-btn {
    position: absolute;
    top: 11%;
    left: 1%;
    padding: 7px 12px;
    background-color: #000000;
    color: white;
    border-radius: 5px;
    text-decoration: none;
    font-family: "Lexend Mega", sans-serif;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .go-back-btn:hover {
    background-color: #00b388;
  }
  /* Main layout grid */

  .single-image {
    all: unset; /* Resets all inherited styles */
  }
  /* Main grid layout */
  .single-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Split 50/50 */
    gap: 0; /* Remove spacing */
    max-width: 100%;
    margin: 0 auto;
    height: 100vh; /* Full viewport height */
  }

  /* Ensure image fills half the page */
  .single-image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .single-image {
    width: 100%; /* Stretch to full container */
    height: 100%; /* Stretch vertically */
    object-fit: cover; /* Maintain aspect ratio and cover */
  }

  /* Right-side content styling */
  .single-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 40px;
  }

  /* Quantity and button section */
  .button-section {
    display: flex;
    align-items: center;
    gap: 20px; /* Space between input and button */
    margin-top: 20px;
  }

  /* Quantity input styling */
  .quantity-input {
    width: 60px;
    padding: 5px;
    font-size: 16px;
    text-align: center;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  /* Button hover adjustments */
  .button-section button {
    flex-shrink: 0; /* Prevent button from resizing */
  }

  @media (max-width: 768px) {
    .single-grid {
      grid-template-columns: 1fr; /* Stack on smaller screens */
      height: auto; /* Adjust for mobile */
    }

    .single-image-wrapper {
      height: 300px; /* Set a fixed height for mobile */
    }
  }

  h2 {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 36px;
    color: #000000;
    margin-bottom: 10px;
  }

  p {
    font-family: "Kantumruy Pro", sans-serif;
    font-size: 18px;
    color: #6e6e6e;
    line-height: 1.6;
    margin-bottom: 40px;
  }

  .prod-title {
    color: #000000;
    font-weight: 1000;
  }

  /* Website link */
  .single-website {
    color: #f2f2f2;
    font-size: 16px;
    text-decoration: none;
    margin-bottom: 15px;
  }

  /* Button styling */
  .buy-tickets {
    background-color: #c38156;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    z-index: 1000;
  }

  .buy-tickets:hover {
    background-color: #00b388;
  }

  /* Additional media section styling */
  .single-extras {
    max-width: 1200px;
    margin: 40px auto;
  }

  .spotify-embed {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    height: 400px;
    max-width: 1200px;
    margin: 20px auto;
    padding: 20px;
    align-items: start;
  }

  @media (max-width: 768px) {
    .single-grid {
      display: grid;
      grid-template-columns: 1fr;
    }
  }
</style>
