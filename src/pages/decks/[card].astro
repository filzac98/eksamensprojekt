---
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  const data = await fetch(
    "https://jjjjscawvefnxkupahzs.supabase.co/rest/v1/data?select=*",
    {
      method: "GET",
      headers: {
        apikey:
          "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImpqampzY2F3dmVmbnhrdXBhaHpzIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MzI1MzYwNzgsImV4cCI6MjA0ODExMjA3OH0.mTLqZh0sSiFXO8M_cW7oiyPzL1R_xdMpfMoxMtGCVCk",
      },
    }
  ).then((response) => response.json());

  return data.map((card) => {
    return {
      params: { card: card.slug },
      props: { card },
    };
  });
}

const { card } = Astro.props;
---

<MainLayout title={card.name} currentPage="Kiosk">
  <section class="single-grid">
    <!-- Left side: Full Image -->
    <div class="single-image-wrapper">
      <img src={`/images/${card.img}`} alt={card.name} class="single-image" />
      <a href="/kiosk#decks" class="go-back-btn"><</a>
    </div>

    <!-- Right side: Information & Buttons -->
    <div class="single-info">
      <h2>{card.name}</h2>
      <p>{card.price}$</p>
      <p class="prod-title">{card.prod_title}</p>
      <p>{card.desc}</p>
      <div class="button-section">
        <!-- Quantity Selector -->
        <div class="quantity-wrapper">
          <p class="quantity-label">Quantity:</p>
          <input
            type="number"
            min="1"
            value="1"
            class="quantity-input"
            aria-label="Quantity"
          />
        </div>
        <!-- Add to Cart Button -->
        <button id="add-to-cart" class="add-to-cart-btn">ADD TO CART</button>
      </div>
    </div>
  </section>

  <div id="cart-overlay-background"></div>
  <!-- Sliding Cart Overlay -->
  <div id="cart-overlay" class="cart-overlay">
    <div class="cart-content">
      <button id="close-cart" class="close-cart">&times;</button>
      <h2>Cart <span>(1 item)</span></h2>
      <div class="cart-item">
        <img src={`/images/${card.img}`} alt="Cart Item Image" />
        <div class="cart-details">
          <h3>{card.name}</h3>
          <p>{card.price}$</p>
          <label>
            Quantity:
            <input type="number" min="1" value="1" />
          </label>
          <a href="#" class="remove-item">Remove</a>
        </div>
      </div>
      <div class="cart-footer">
        <button class="checkout-btn">CHECKOUT â€¢ {card.price}$</button>
        <p class="shipping-text">Shipping & taxes calculated at checkout</p>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Button style for "Go Back to Artists" */
  .go-back-btn {
    position: absolute;
    top: 11%;
    left: 1%;
    padding: 7px 12px;
    background-color: #000000;
    color: white;
    border-radius: 5px;
    text-decoration: none;
    font-family: "Lexend Mega", sans-serif;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .go-back-btn:hover {
    background-color: #00b388;
  }
  /* Main layout grid */

  .single-image {
    all: unset; /* Resets all inherited styles */
  }
  /* Main grid layout */
  .single-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Split 50/50 */
    gap: 0; /* Remove spacing */
    max-width: 100%;
    margin: 0 auto;
    height: 100vh; /* Full viewport height */
  }

  /* Ensure image fills half the page */
  .single-image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .single-image {
    width: 100%; /* Stretch to full container */
    height: 100%; /* Stretch vertically */
    object-fit: cover; /* Maintain aspect ratio and cover */
  }

  /* Right-side content styling */
  .single-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 40px;
  }

  /* Quantity and button section */
  .button-section {
    display: flex;
    align-items: center;
    gap: 20px; /* Space between input and button */
    margin-top: 20px;
  }

  /* Quantity input styling */
  .quantity-input {
    width: 60px;
    padding: 5px;
    font-size: 16px;
    text-align: center;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  /* Quantity wrapper for vertical alignment */
  .quantity-wrapper {
    display: flex;
    flex-direction: column; /* Stack items vertically */
    align-items: flex-start; /* Align to the left */
    gap: 5px; /* Space between label and input */
  }

  /* Quantity label styling */
  .quantity-label {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 18px;
    color: #000000; /* Black color */
    margin: 0; /* Remove default margin */
  }
  /* Button hover adjustments */
  .button-section button {
    flex-shrink: 0; /* Prevent button from resizing */
  }

  /* Sliding Cart Overlay */
  .cart-overlay {
    position: fixed;
    top: 0;
    right: -100%;
    width: 400px;
    height: 100vh;
    background-color: #ffffff;
    box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    transition: right 0.3s ease-in-out;
    display: flex;
    flex-direction: column; /* Column layout */

    padding: 20px;
    overflow-y: auto;
  }

  .cart-overlay.active {
    right: 0;
  }

  .cart-content {
    flex: 1; /* Allow it to take remaining space */
    overflow-y: auto; /* Scroll if needed */
  }

  .cart-content h2 {
    font-size: 24px;
    color: #000;
  }
  .cart-content h2 span {
    font-size: 14px; /* Smaller "(1 item)" */
    font-weight: normal;
  }

  .cart-item {
    display: flex;
    align-items: center;
    gap: 15px;
    margin: 20px 0;
  }

  .cart-item img {
    width: 100px;
    border-radius: 5px;
  }

  .cart-details h3 {
    margin: 0;
    font-size: 16px;
    color: #333;
  }

  .cart-details p {
    margin: 5px 0;
  }
  .cart-details label {
    display: flex;
    align-items: center;
    font-size: 14px;
  }

  .cart-details input[type="number"] {
    width: 50px; /* Smaller quantity box */
    padding: 5px;
    margin-left: 5px;
    font-size: 14px;
  }
  .close-cart {
    position: absolute;
    top: 10px;
    right: 10px;
    background: none;
    border: none;
    font-size: 42px;
    cursor: pointer;
    line-height: 1;
  }

  /* Checkout Section: Bottom */
  .cart-footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    margin-top: auto; /* Push to bottom */
  }
  .shipping-text {
    color: #6e6e6e;
    font-size: 14px;
    text-align: center;
  }

  .checkout-btn {
    background-color: #000;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
  }

  .checkout-btn:hover {
    background-color: #00b388;
  }

  .remove-item {
    color: #ff0000;
    text-decoration: none;
    font-size: 14px;
  }

  /* Add to Cart Button */
  .add-to-cart-btn {
    background-color: #000000;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .add-to-cart-btn:hover {
    background-color: #00b388;
  }

  @media (max-width: 768px) {
    .single-grid {
      grid-template-columns: 1fr; /* Stack on smaller screens */
      height: auto; /* Adjust for mobile */
    }

    .single-image-wrapper {
      height: 300px; /* Set a fixed height for mobile */
    }
  }

  h2 {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 36px;
    color: #000000;
    margin-bottom: 10px;
  }

  p {
    font-family: "Kantumruy Pro", sans-serif;
    font-size: 18px;
    color: #6e6e6e;
    line-height: 1.6;
    margin-bottom: 40px;
  }

  .prod-title {
    color: #000000;
    font-weight: 1000;
  }

  /* Website link */
  .single-website {
    color: #f2f2f2;
    font-size: 16px;
    text-decoration: none;
    margin-bottom: 15px;
  }

  /* Button styling */
  .buy-tickets {
    background-color: #c38156;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    z-index: 1000;
  }

  .buy-tickets:hover {
    background-color: #00b388;
  }

  /* Additional media section styling */
  .single-extras {
    max-width: 1200px;
    margin: 40px auto;
  }

  .spotify-embed {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    height: 400px;
    max-width: 1200px;
    margin: 20px auto;
    padding: 20px;
    align-items: start;
  }

  @media (max-width: 768px) {
    .single-grid {
      display: grid;
      grid-template-columns: 1fr;
    }
    /* Adjust button-section layout for mobile */
    .button-section {
      flex-direction: column; /* Stack items vertically */
      align-items: flex-start; /* Align items to the left */
      gap: 10px; /* Reduce spacing between elements */
    }
    .cart-overlay {
      top: 0;
      right: 0;
      left: 0;
      width: 100%; /* Full width */
      height: 50%; /* Adjust the height as needed */
      transform: translateY(-100%); /* Hidden above the screen initially */
      transition: transform 0.3s ease-in-out;
    }

    .cart-overlay.active {
      transform: translateY(0); /* Slide down into view */
    }
    /* Cart Background Overlay */
    .cart-overlay-background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5); /* Semi-transparent black background */
      opacity: 0; /* Hidden by default */
      visibility: hidden; /* Ensure it does not interfere with clicks */
      transition: opacity 0.3s ease-in-out;
      z-index: 998; /* Just below the cart overlay */
    }

    .cart-overlay-background.active {
      opacity: 1; /* Fade in the background */
      visibility: visible;
    }
  }
</style>
