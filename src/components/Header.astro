---
const { currentPage } = Astro.props; // Accept currentPage as a prop
---

<header class="header">
  <div class="menu-icon">
    <div class="burger-menu">
      <div class="burger-line top-line"></div>
      <div class="burger-line middle-line"></div>
      <div class="burger-line bottom-line"></div>
    </div>
    <p class="menu-text">{currentPage || "Home"}</p>
  </div>

  <button class="cart-icon" id="cart-icon">
    <img
      src="/icons/ShoppingBag.webp"
      alt="Shopping Bag Icon"
      class="cart-image"
    />
  </button>

  <!-- Sliding Cart Overlay -->
  <div id="cart-header" class="cart-header">
    <div class="cart-content">
      <button id="close-cart-icon" class="close-cart-icon">&times;</button>
      <h2>Empty Cart <span>(0 item)</span></h2>
      <div class="cart-item">
        <img src="/images/mona_lisa1.webp" alt="Cart Item Image" />
        <div class="cart-details">
          <h3>MONA LISA</h3>
          <p>0$</p>
          <label>
            Quantity:
            <input type="number" min="1" value="1" />
          </label>
          <a href="#" class="remove-item">Remove</a>
        </div>
      </div>
      <div class="cart-footer">
        <button class="checkout-btn">CHECKOUT • 0$</button>
        <p class="shipping-text">Shipping & taxes calculated at checkout</p>
      </div>
    </div>
  </div>
</header>

<!-- Add a nav list -->
<nav class="nav-menu">
  <a href="/">
    <img src="/images/whitelogo.png" alt="Home" class="nav-logo" />
  </a>
  <ul class="header-nav-list">
    <li><a href="/">Home</a></li>
    <li><a href="/kiosk">Kiosk</a></li>
    <li><a href="#">Archive</a></li>
    <li><a href="/explore">Explore</a></li>
    <li><a href="/#events">Events</a></li>
  </ul>
  <div class="social-links">
    <a
      href="https://www.instagram.com/dealersgrip/"
      target="_blank"
      class="social-link"
    >
      <i class="fab fa-instagram"></i>
    </a>
    <a
      href="https://www.facebook.com/dealersgrip"
      target="_blank"
      class="social-link"
    >
      <i class="fab fa-facebook-square"></i>
    </a>
    <a
      href="https://www.linkedin.com/in/oliversgrd/?originalSubdomain=dk"
      target="_blank"
      class="social-link"
    >
      <i class="fab fa-linkedin"></i>
    </a>
    <a
      href="https://www.youtube.com/@dealersgrip"
      target="_blank"
      class="social-link"
    >
      <i class="fab fa-youtube"></i>
    </a>
  </div>
</nav>

<script src="/src/script/burgerMenu.js"></script>
<script src="/src/script/cart.js"></script>

<style>
  /* General Reset for Consistency */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Header Styling */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 100vw;
    padding: 1rem 2rem;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 102;
  }

  /* Burger Menu Container */
  .menu-icon {
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 101; /* Higher z-index to keep the burger menu on top of the nav */
  }

  /* Burger Menu */
  .burger-menu {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 6px;
    cursor: pointer;
    transition: color 0.3s;
    z-index: 103; /* Ensure it stays visible above nav-menu */
  }

  /* Burger Lines */
  .burger-line {
    height: 4px;
    background-color: black;
    border-radius: 2px;
    transition: all 0.3s ease;
    transition: transform 0.3s ease; /* Smooth transition for hover effect */
  }

  .top-line {
    width: 27px;
    align-self: flex-start;
    transform-origin: top left;
  }

  .middle-line {
    width: 40px;
    align-self: flex-end;
    opacity: 1; /* Ensure visibility initially */
    transition: opacity 0.3s ease;
  }

  .bottom-line {
    width: 27px;
    align-self: flex-end;
    transform-origin: bottom left;
  }

  /* Active State for the Burger Lines */
  .burger-menu.active .top-line {
    transform: rotate(45deg) translate(1px, 1px); /* Rotate and shift to form the top of "X" */
  }

  .burger-menu.active .middle-line {
    opacity: 0; /* Hide the middle line */
  }

  .burger-menu.active .bottom-line {
    transform: rotate(-45deg) translate(-8px, -9px); /* Rotate and shift to form the bottom of "X" */
  }

  /* Apply hover effect only when burger-menu is NOT active */
  .burger-menu:not(.active):hover .top-line {
    transform: translateX(12px);
  }

  .burger-menu:not(.active):hover .bottom-line {
    transform: translateX(-12px);
  }
  /* Menu Text */
  .menu-text {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 1rem;
    transition: color 0.3s;
    z-index: 10000;
  }
  /* When the burger menu is active, change the color */
  .burger-menu.active .burger-line {
    background-color: rgb(255, 255, 255);
  }

  /* When the menu text is active, change the color */
  .menu-text.active {
    color: rgb(255, 255, 255);
  }

  /* Cart Icon */

  .cart-icon {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .cart-image {
    width: 32px; /* Adjust size as needed */
    height: auto;
    display: block;
    border-radius: 100%;
  }
  .cart-icon:hover {
    background-color: #00b388;
    border-radius: 100%;
  }
  .cart-icon {
    border-radius: 100%;
  }

  .nav-menu {
    display: none; /* Initially hidden */
    position: fixed;
    top: 0;
    left: 0; /* Position on the left side */
    background-color: #1c1c1e;
    width: 300px; /* Adjust width */
    height: 100vh; /* Full height */
    padding: 2rem;
    z-index: 51; /* Keep it below burger menu */
    transform: translateX(-100%); /* Initially off-screen */
    transition: transform 0.3s ease-in-out; /* Smooth slide-in effect */
  }

  /* When the 'active' class is added, show the menu */
  .nav-menu.active {
    display: block; /* Make it visible */
    transform: translateX(0); /* Slide the menu in */
  }
  .nav-menu ul {
    margin-top: 20%;
    list-style-type: none;
  }

  .nav-menu ul li {
    margin-bottom: 1rem;
  }

  .nav-menu ul li a {
    text-decoration: none;
    color: rgb(255, 255, 255);
    font-size: 3rem;
    font-weight: bold;
    font-family: Arial, Helvetica, sans-serif;
  }

  .nav-menu ul li a:hover {
    color: #00b388;
  }

  .nav-menu .nav-logo {
    position: relative; /* Allow movement of the logo */
    top: -1.3rem; /* Adjust vertically */
    left: 13rem; /* Adjust horizontally */
    width: 40px; /* Adjust logo width */
    z-index: 110; /* Ensure it’s on top of other elements */
    pointer-events: auto; /* Enable clicking on the logo */
  }

  /* Sliding Cart Overlay */
  .cart-header {
    position: fixed;
    top: 0;
    right: -100%;
    width: 400px;
    height: 100vh;
    background-color: #ffffff;
    box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    transition: right 0.3s ease-in-out;
    display: flex;
    flex-direction: column; /* Column layout */
    padding: 20px;
    overflow-y: auto;
  }

  .cart-header.active {
    right: 0;
  }

  .cart-content {
    flex: 1; /* Allow it to take remaining space */
    overflow-y: auto; /* Scroll if needed */
  }

  .cart-content h2 {
    font-size: 24px;
    color: #000;
  }
  .cart-content h2 span {
    font-size: 14px; /* Smaller "(1 item)" */
    font-weight: normal;
  }

  .cart-item {
    display: flex;
    align-items: center;
    gap: 15px;
    margin: 20px 0;
  }

  .cart-item img {
    width: 100px;
    border-radius: 5px;
  }

  .cart-details h3 {
    margin: 0;
    font-size: 16px;
  }

  .cart-details p {
    margin: 5px 0;
    font-size: 16px;
    font-family: "Kantumruy Pro", sans-serif;
    font-size: 18px;
    color: #6e6e6e;
  }
  .cart-details label {
    display: flex;
    align-items: center;
    font-size: 14px;
  }

  .cart-details input[type="number"] {
    width: 50px; /* Smaller quantity box */
    padding: 5px;
    margin-left: 5px;
    font-size: 14px;
  }
  .close-cart-icon {
    position: absolute;
    top: 10px;
    right: 10px;
    background: none;
    border: none;
    font-size: 42px;
    cursor: pointer;
    line-height: 1;
  }

  /* Checkout Section: Bottom */
  .cart-footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    margin-top: auto; /* Push to bottom */
  }
  .shipping-text {
    color: #6e6e6e;
    font-size: 14px;
    text-align: center;
  }

  .checkout-btn {
    background-color: #000;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
  }

  .checkout-btn:hover {
    background-color: #00b388;
  }

  .remove-item {
    color: #ff0000;
    text-decoration: none;
    font-size: 14px;
  }

  .add-to-cart-btn {
    background-color: #000000;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .add-to-cart-btn:hover {
    background-color: #00b388;
  }
  /* Social links */

  .social-links {
    margin-top: 80%;
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .social-link {
    color: #ffffff;
    font-size: 38px;
    text-decoration: none;
  }

  .social-link:hover {
    color: #00b388;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .header {
      padding: 0.5rem 1rem;
      flex-direction: row-reverse; /* Reverse item order: burger menu -> cart icon */
    }

    .menu-text {
      order: -1;
    }

    .cart-icon {
      font-size: 1.25rem;
    }

    .menu-icon {
      margin-left: auto; /* Push burger menu to the right */
    }
    /* Move the nav menu off-screen to the right initially */
    /* Updated Nav Menu */

    .nav-menu .nav-logo {
      top: 0;
      left: 0;
      width: 40px;
    }
    .nav-menu {
      width: 100%; /* Adjust width */
    }

    .nav-menu.active:has(+ .cart-icon) + .cart-icon {
      display: none;
    }

    /* When the 'active' class is added, show the menu */

    /* Social links */

    .social-links {
      margin-top: 20%;
    }

    .cart-header {
      top: 0;
      right: 0;
      left: 0;
      width: 100%; /* Full width */
      height: 50%; /* Adjust the height as needed */
      transform: translateY(-100%); /* Hidden above the screen initially */
      transition: transform 0.3s ease-in-out;
    }
    .cart-header.active {
      transform: translateY(0); /* Slide down into view */
    }
  }
</style>
