---
// Props
const { name, price, image } = Astro.props;
---

<div class="product-card">
  <div class="image-placeholder">
    <img src={image || "/images/placeholder.png"} alt={name} />
  </div>
  <div class="product-info">
    <p class="product-name">{name}</p>
    <p class="product-price">{price} $</p>
    <button class="add-to-cart">
      <img src="/icons/lock-icon.png" alt="Add to cart" />
    </button>
  </div>
</div>

<style>
  .product-card {
    width: 200px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .image-placeholder {
    width: 100%;
    height: 150px;
    background-color: #e0e0e0;
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .image-placeholder img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .product-info {
    text-align: center;
    margin-top: 10px;
  }

  .product-name {
    font-size: 16px;
    font-weight: bold;
  }

  .product-price {
    font-size: 14px;
    color: #777;
    margin: 5px 0;
  }

  .add-to-cart {
    background: none;
    border: none;
    cursor: pointer;
  }

  .add-to-cart img {
    width: 20px;
    height: 20px;
  }
</style>
