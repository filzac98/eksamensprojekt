<footer class="footer">
  <a href="#"
    ><img
      src="/images/logo.png"
      alt="Logo"
      class="footer-logo"
      style="margin-bottom: 3%;"
    />
  </a>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="social-links">
      <a
        href="https://www.instagram.com/dealersgrip/"
        target="_blank"
        class="social-link"
      >
        <i class="fab fa-instagram"></i>
      </a>
      <a
        href="https://www.facebook.com/dealersgrip"
        target="_blank"
        class="social-link"
      >
        <i class="fab fa-facebook-square"></i>
      </a>
      <a
        href="https://www.linkedin.com/in/oliversgrd/?originalSubdomain=dk"
        target="_blank"
        class="social-link"
      >
        <i class="fab fa-linkedin"></i>
      </a>
      <a
        href="https://www.youtube.com/@dealersgrip"
        target="_blank"
        class="social-link"
      >
        <i class="fab fa-youtube"></i>
      </a>
    </div>
  </div>

  <style>
    * {
      margin: 0 auto;
    }
    .footer {
      background-color: #a7e9af; /* Soft green */
      padding: 2rem;
      text-align: center;
      font-family: "Kantumruy Pro", sans-serif;
      margin: 0 auto;
    }

    .footer-bottom {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 2rem;
    }

    .footer-logo {
      max-height: 50px;
    }

    .social-links {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    .social-link {
      color: #ffffff;
      font-size: 38px;
      text-decoration: none;
    }

    .social-link:hover {
      color: var(--hover-color);
    }

    @media (max-width: 1024px) {
      /* Adjust logo size for tablets */
      .footer-logo {
        max-height: 45px;
      }
    }

    /* Mobile First */
    @media (max-width: 768px) {
      /* Make the footer logo smaller */
      .footer-logo {
        max-height: 40px;
      }

      /* Adjust the social links layout */
      .footer-bottom {
        flex-direction: column;
        gap: 1rem;
      }
    }

    /* Tablet */
  </style>
</footer>
