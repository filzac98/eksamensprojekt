---
const { images, title, subtitle } = Astro.props;
---

<section class="hero">
  <!-- Image Grid -->
  <div class="hero-images">
    {
      images.map((image) => (
        <img src={image.src} alt={image.alt} class="hero-image" />
      ))
    }
  </div>

  <!-- Navigation List -->
  <nav class="hero-nav">
    <a href="/" class="nav-logo">
      <img src="/images/logo.png" alt="Home" />
    </a>
    <ul class="nav-list">
      <li><a href="/kiosk">KIOSK</a></li>
      <li><a href="/explore">EXPLORE</a></li>
      <li><a href="/archive">ARCHIVE</a></li>
      <li><a href="/events">EVENTS</a></li>
    </ul>
  </nav>

  <!-- Logo and Description -->
  <div class="hero-footer">
    <h1 class="hero-title">{title}</h1>
    <p class="hero-subtitle">
      {
        subtitle.map((line) => (
          <>
            {line} <br />
          </>
        ))
      }
    </p>
  </div>

  <!-- Arrow Icon -->
  <a href="#footer">
    <div class="hero-arrow">
      <i class="fas fa-chevron-down"></i>
    </div>
  </a>
</section>

<style>
  .hero {
    margin-top: 8%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .hero-images {
    position: relative;
    top: 10%;
    display: flex;
    gap: 2.2rem;
    margin: 2rem 0;
    position: relative; /* Relative positioning for the nav list */
  }

  .hero-image {
    max-width: 300px;
    height: auto;
  }

  /* Hero Navigation Styles */
  .hero-nav {
    position: absolute;
    bottom: 10%;
    left: 2%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
  }

  .nav-logo img {
    width: 50px;
    height: auto;
    margin-bottom: -25%;
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left; /* Ensure the list is aligned to the left */
  }

  .nav-list li {
    margin: 0.5rem 0;
  }

  .nav-list a {
    text-decoration: none;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 1000;
    font-size: 2rem;
    color: #000000;
    transition: color 0.3s ease;
    display: block; /* Ensure the link takes up the full width of the list item */
    text-align: left; /* Explicitly align the text to the left */
  }

  .nav-list a:hover {
    color: #c38156; /* Highlight color on hover */
  }

  /* Logo and Footer */
  .hero-footer {
    margin-top: 2.7rem; /* Retain the current spacing from other elements */
    position: relative; /* Enable positioning relative to its normal flow */
    top: -70px; /* Adjust this value to move it higher */
    left: 320px; /* Adjust this value to move it to the right */
    text-align: center; /* Keep the text centered within the footer */
  }
  .hero-title {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 3rem;
    font-weight: 400;
  }

  .hero-subtitle {
    font-family: Arial, Helvetica, sans-serif;
    text-align: start;
    font-size: 0.65rem;
    margin-top: 0.5rem;
    position: relative;
    top: -15px; /* Adjust this value to move it higher */
    left: 5px;
  }

  /* Arrow Animation */
  .hero-arrow {
    margin-top: -4rem;
    animation: bounce 2s infinite;
    font-size: xx-large;
    color: #000000;
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .hero-images {
      flex-direction: column;
    }

    .hero-image {
      max-width: 150px;
    }

    .hero-nav {
      bottom: 10%;
      left: 5%;
      padding: 0.5rem;
    }

    .nav-list a {
      font-size: 0.875rem;
    }
    .hero-footer {
      top: -20px; /* Adjust this value to move it higher */
      left: 0px; /* Adjust this value to move it to the right */
    }
    .hero-title {
      font-size: 1.2rem;
      font-weight: 400;
    }

    .hero-subtitle {
      font-family: Arial, Helvetica, sans-serif;
      text-align: start;
      font-size: 0.65rem;
      margin-top: 0.5rem;
      position: relative;
      top: -18px; /* Adjust this value to move it higher */
      left: 5px;
    }
  }
</style>
